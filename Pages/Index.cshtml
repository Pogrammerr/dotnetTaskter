<div class="row row-cols-6">
    @foreach (var task in Model.Projects)
    {
        <div class="card border-primary mb-3" style="max-width: 18rem; margin-left: 16px; color: black;">
            <div class="card-header">Gorev no @task.id</div>
            <div class="card-body text-primary">
                <h5 class="card-title">Konu: @task.topic</h5>
                <p class="card-text">Detaylar: @task.details</p>
                <p class="card-text">Iletisim: @task.iletisim</p>
                <p class="card-text">Tamamlanmis mi: @task.completed</p>
                <p class="card-text">Son teslim: @task.deadline</p>
            </div>
            <div class="card-footer text-center" style="color: black;">
                Lutfen yukaridaki mail adresi ile iletisime gecin.
            </div>
        </div>
    }
</div>


