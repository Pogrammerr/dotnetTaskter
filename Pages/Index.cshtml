@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Model.Status == "Success")
{
    <div class="alert alert-success" role="alert">Basarili!</div>
}
else if (Model.Status == "Error")
{
    <div class="alert alert-danger" role="alert">Hata!</div>
}

